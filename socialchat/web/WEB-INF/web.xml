<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>/WEB-INF/applicationContext.xml</param-value>
    </context-param>
    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>
    <servlet>
        <servlet-name>dispatcher</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <load-on-startup>2</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>signinserv</servlet-name>
        <servlet-class>chatpackage.signinserv</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>signupserv</servlet-name>
        <servlet-class>chatpackage.signupserv</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>sendmessage</servlet-name>
        <servlet-class>chatpackage.sendmessage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>groupfinder</servlet-name>
        <servlet-class>chatpackage.groupfinder</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>disscussion</servlet-name>
        <servlet-class>chatpackage.disscussion</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>signoutserv</servlet-name>
        <servlet-class>chatpackage.signoutserv</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>creategroup</servlet-name>
        <servlet-class>chatpackage.creategroup</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>autoreload</servlet-name>
        <servlet-class>chatpackage.autoreload</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>dispatcher</servlet-name>
        <url-pattern>*.htm</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>signinserv</servlet-name>
        <url-pattern>/signinserv</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>signupserv</servlet-name>
        <url-pattern>/signupserv</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>sendmessage</servlet-name>
        <url-pattern>/sendmessage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>groupfinder</servlet-name>
        <url-pattern>/groupfinder</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>disscussion</servlet-name>
        <url-pattern>/disscussion</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>signoutserv</servlet-name>
        <url-pattern>/signoutserv</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>creategroup</servlet-name>
        <url-pattern>/creategroup</url-pattern>
    </servlet-mapping>
    
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>redirect.jsp</welcome-file>
    </welcome-file-list>
</web-app>
